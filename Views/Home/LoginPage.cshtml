@model Customer
@{
    ViewData["Title"] = "Login Page";
    TempData["error"] = false;

}

<div class="login-container ">
    <!-- Left Side -->
    <div class="left-side">
        <div class="login-box">
            <h4>Welcome</h4>
            <h2>Sign In</h2>
            <form asp-controller="Home" asp-action="LoginPage" method="post">

                <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="you@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="mt-3" asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3 text-end">
                    <a href="#" class="form-text">Forgot password?</a>
                </div>
                <button type="submit" class="btn btn-login mb-3">Sign In</button>
                <p class="mt-3">Don't have an Account ? <a class="btn btn-link" asp-action="SignupPage">Sign up here</a>.</p>

            </form>
        </div>
    </div>

    <!-- Right Side -->
    <div class="right-side">
        <div class="illustration">
            <img class="text-center" src="~/Images/UrbanThreadsV_2.png" alt="Shopping Illustration">
        </div>
    </div>
</div>


@section Scripts{
    <script>
        @if (@ViewBag.LoginError != null)
        {
            <text>
                alert('@ViewBag.LoginError');
            </text>
        }
    </script>
}
