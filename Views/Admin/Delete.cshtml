@model Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Delete Product</h1>

</div>


<div class="alert alert-warning">
    Are you sure you want to delete this product?
</div>

<div>
    <strong>Name:</strong> @Model.Name <br />
    <strong>Price:</strong> @Model.Price <br />
    <strong>Description:</strong> @Model.Description <br />
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img class="img-fluid img-thumbnail " src="@Model.ImageUrl" style="max-width: 500px" />
    }
</div>

<form asp-controller="Admin" asp-action="DeleteProduct" method="post">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger" asp-action="DeleteProduct" asp-controller="Admin" asp-route-id="@Model.ProductId">Yes, Delete</button>
    <a href="@Url.Action("Product", "Admin")" class="btn btn-secondary">Cancel</a>
</form>


