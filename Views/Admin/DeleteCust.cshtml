@model Customer

@{
    ViewData["Title"] = "Delete Customer";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">Delete Customer</h1>

</div>


<div class="alert alert-warning">
    Are you sure you want to delete this Customer?
</div>

<div>
    <h5><strong>Name:</strong> @Model.CustomerId <br /> </h5>
    
    <h5><strong>Price:</strong> @Model.Name <br /></h5>
    <h5><strong>Description:</strong> @Model.Email <br /></h5>
</div>

<form asp-controller="Admin" asp-action="DeleteCustmber" method="post" class="mt-4">
    <button type="submit" class="btn btn-danger" asp-action="DeleteCustmber" asp-controller="Admin" asp-route-id="@Model.CustomerId">Yes, Delete</button>
    <a href="@Url.Action("Custmber", "Admin")" class="btn btn-secondary">Cancel</a>
</form>


